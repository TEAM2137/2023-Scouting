<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#323435"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_auto_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_background"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/topPlusA"
        android:layout_width="260dp"
        android:layout_height="130dp"
        android:layout_marginTop="216dp"
        android:layout_marginEnd="8dp"
        android:text="+"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_auto_top" />

    <Button
        android:id="@+id/topMinusA"
        android:layout_width="260dp"
        android:layout_height="130dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="216dp"
        android:text="-"
        android:textSize="60sp"
        app:layout_constraintEnd_toStartOf="@+id/topPlusA"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_auto_top" />

    <Button
        android:id="@+id/midPlusA"
        android:layout_width="260dp"
        android:layout_height="130dp"
        android:layout_marginTop="368dp"
        android:layout_marginEnd="12dp"
        android:text="+"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_auto_top" />

    <Button
        android:id="@+id/midMinusA"
        android:layout_width="260dp"
        android:layout_height="130dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="368dp"
        android:text="-"
        android:textSize="60sp"
        app:layout_constraintEnd_toStartOf="@+id/topPlusA"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_auto_top" />

    <Button
        android:id="@+id/lowPlusA"
        android:layout_width="260dp"
        android:layout_height="130dp"
        android:layout_marginTop="520dp"
        android:layout_marginEnd="12dp"
        android:text="+"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_auto_top" />

    <Button
        android:id="@+id/lowMinusA"
        android:layout_width="260dp"
        android:layout_height="130dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="520dp"
        android:text="-"
        android:textSize="60sp"
        app:layout_constraintEnd_toStartOf="@+id/topPlusA"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_auto_top" />

    <TextView
        android:id="@+id/topScoreTA"
        android:layout_width="50dp"
        android:layout_height="73dp"
        android:layout_marginTop="240dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_background"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/midScoreTA"
        app:layout_constraintStart_toEndOf="@+id/topMinusA"
        app:layout_constraintStart_toStartOf="@+id/midScoreTA"
        app:layout_constraintTop_toBottomOf="@+id/text_auto_top" />

    <TextView
        android:id="@+id/midScoreTA"
        android:layout_width="50dp"
        android:layout_height="73dp"
        android:layout_marginTop="392dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_background"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/lowScoreTA"
        app:layout_constraintStart_toEndOf="@+id/topMinusA"
        app:layout_constraintStart_toStartOf="@+id/lowScoreTA"
        app:layout_constraintTop_toBottomOf="@+id/text_auto_top" />

    <TextView
        android:id="@+id/lowScoreTA"
        android:layout_width="50dp"
        android:layout_height="73dp"
        android:layout_marginTop="544dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_background"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/topMinusA"
        app:layout_constraintTop_toBottomOf="@+id/text_auto_top" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="226dp"
        android:layout_height="226dp"
        android:layout_marginStart="187dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp"
        android:src="@mipmap/ic_launcher_dark"
        app:layout_constraintBottom_toTopOf="@+id/text_auto_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/Docked"
        android:layout_width="256dp"
        android:layout_height="44dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:text="Docked"
        android:textColor="@color/design_default_color_background"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_auto_top" />

    <Switch
        android:id="@+id/Engaged"
        android:layout_width="166dp"
        android:layout_height="46dp"
        android:layout_marginStart="216dp"
        android:layout_marginTop="46dp"
        android:text="Engaged"
        android:textColor="@color/design_default_color_background"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leftCommunity" />

    <Switch
        android:id="@+id/leftCommunity"
        android:layout_width="257dp"
        android:layout_height="50dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="36dp"
        android:text="Left Community"
        android:textColor="@color/design_default_color_background"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_auto_top" />

    <TextView
        android:id="@+id/topButtonsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="108dp"
        android:text="High Score"
        android:textColor="@color/design_default_color_background"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leftCommunity" />

    <TextView
        android:id="@+id/topButtonsText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="260dp"
        android:text="Middle Score"
        android:textColor="@color/design_default_color_background"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leftCommunity" />

    <TextView
        android:id="@+id/topButtonsText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="412dp"
        android:text="Low Score"
        android:textColor="@color/design_default_color_background"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leftCommunity" />

</androidx.constraintlayout.widget.ConstraintLayout>