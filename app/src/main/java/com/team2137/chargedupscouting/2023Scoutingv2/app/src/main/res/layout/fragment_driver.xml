<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#323435"
    tools:context=".ui.dashboard.DashboardFragment">

    <TextView
        android:id="@+id/topScoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="75dp"
        android:text="High Score"
        android:textColor="@color/design_default_color_background"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_driver_top" />

    <Button
        android:id="@+id/topPlus2"
        android:layout_width="260dp"
        android:layout_height="130dp"
        android:layout_marginTop="98dp"
        android:layout_marginEnd="8dp"
        android:text="+"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_driver_top" />

    <Button
        android:id="@+id/topMinus2"
        android:layout_width="260dp"
        android:layout_height="130dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="98dp"
        android:text="-"
        android:textSize="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_driver_top" />

    <TextView
        android:id="@+id/text_driver_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_background"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/topScoreTT"
        android:layout_width="50dp"
        android:layout_height="73dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="120dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_background"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/topMinus2"
        app:layout_constraintTop_toBottomOf="@+id/text_driver_top" />

</androidx.constraintlayout.widget.ConstraintLayout>